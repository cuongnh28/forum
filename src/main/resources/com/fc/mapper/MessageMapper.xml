<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fc.mapper.MessageMapper">


    <insert id="insertMessage">
        insert into message(userId,otherId,other_username,operation,postId,displayed_content)
        values(#{userId},#{otherId},#{otherUsername},#{operation},#{postId},#{displayedContent})
    </insert>

    <select id="listMessageByUserId" resultType="com.fc.model.Message">
        select * from message where userId=#{userId}
    </select>

    <delete id="deleteMassage">
        delete from message
        where postId = #{postId}
    </delete>

</mapper>
