<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fc.mapper.ReplyMapper">

    <resultMap type="com.fc.model.User" id="userMap">
        <id column="userId" property="userId"/>
        <result column="username" property="username"/>
        <result column="head_url" property="headUrl"/>
    </resultMap>

    <resultMap type="com.fc.model.Reply" id="replyMap">
        <id column="rid" property="rid"/>
        <result column="content" property="content"/>
        <association property="user" javaType="com.fc.model.User" resultMap="userMap" />
    </resultMap>

    <resultMap type="com.fc.model.Comment" id="commentMap">
        <id column="commentId" property="commentId"/>
        <result column="content" property="content"/>
        <association property="user" javaType="com.fc.model.User" resultMap="userMap" />
    </resultMap>


    <insert id="insertReply">
        insert into reply(content,userId,postId,reply_time) values(#{content},#{user.userId},#{post.postId},date_format(now(),'%Y-%c-%d %H:%i:%s'))
    </insert>

    <select id="listReply" resultMap="replyMap">
        select r.replyId,r.content,u.userId,u.username,u.head_url from reply r join user u on r.userId=u.userId
        where postId=#{postId}
    </select>

    <insert id="insertComment">
        insert into comment(content,userId,replyId,comment_time) values(#{content},#{user.userId},#{reply.replyId},date_format(now(),'%Y-%c-%d %H:%i:%s'))
    </insert>

    <select id="listComment" resultMap="commentMap">
        select c.commentId,c.content,u.userId,u.username,u.head_url from comment c join user u on c.userId=u.userId
        where replyId=#{replyId}
    </select>

    <select id="getContentByReplyId" resultType="String">
        select content from reply where replyId=#{replyId}
    </select>

</mapper>
